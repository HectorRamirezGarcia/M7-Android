<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aplication">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="121dp"
        android:outlineAmbientShadowColor="@color/design_default_color_on_secondary"
        android:outlineSpotShadowColor="@color/design_default_color_on_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/add_book"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_rounded"
        android:onClick="addbooks"
        android:text="AÃ±adir Libro"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/remove_all_books"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/help"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_rounded"
        android:text="Ayuda"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/remove_all_books"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="123dp"
        android:background="@drawable/button_rounded"
        android:text="Eliminar todos los libros"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_book"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_rounded"
        android:onClick="listbooks"
        android:text="Listar Libros"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/help"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>